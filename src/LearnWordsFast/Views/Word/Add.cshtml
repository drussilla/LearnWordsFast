@{
    ViewBag.Title = "Add Word";
}

<form class="form-horizontal" asp-controller="Word" asp-action="AddWord">
    <div class="form-group form-group-lg">
        <label for="word" class="col-sm-2 control-label">Dutch</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="word" name="word">
        </div>
    </div>
    <div class="form-group form-group-lg">
        <label for="translation" class="col-sm-2 control-label">English</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="translation" name="translation">
        </div>
    </div>

    <div class="form-group form-group-lg">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success btn-lg">Add word</button>
        </div>
    </div>
</form>