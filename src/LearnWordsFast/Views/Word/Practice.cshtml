@model LearnWordsFast.DAL.Models.Word

@{
    ViewBag.Title = "Practice Words";
}

<div class="text-center">
    @if (Model == null)
    {
        <h2>Nothing to learn yet</h2>
        <h4><a asp-action="Add">Add new words</a> or wait until other are ready for training</h4>
    }
    else
    {
        <div class="page-header">
            <h1><small>@Model.Translation</small> @Model.Original <small>@Model.Translation</small>
            </h1>
        </div>
        <form id="main-form"
              class="form-horizontal"
              asp-action="PracticeFinished" 
              asp-controller="Word">
            <input type="hidden" 
                   asp-for="Id"/>
            <input id="original-word"
                   type="hidden"
                   value="@Model.Original" />
            @for (int i = 1; i <= 5; i++)
            {
                <div class="form-group form-group-lg">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-6">
                        <input class="form-control" id="input@(i)" type="text" id="formGroupInputLarge" placeholder="@Model.Original">
                    </div>
                    <div class="col-sm-3"></div>
                </div>
            }
            <button type="submit" id="next-button" class="btn btn-success btn-lg" disabled>Next >></button>
        </form>
    }
</div>